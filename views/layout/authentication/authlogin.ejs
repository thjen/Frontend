<html>
    <head>
        <%- include("../section/v1/head"); -%>
        
    </head>
    <body>
        <div class="row" style="margin-top: 100px; margin-left: 20px; margin-bottom: 100px;">
            <h2 class="text-center">Welcome</h2>
            <div class="col-sm-4 col-md-4 col-lg-4 col-md-offset-4 col-xs-12">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input id="email" name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input id="password" name="pass" type="password" class="form-control" id="inputPassword" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary" onclick="login();">Submit</button>
                    <br/>
                    <br/>
                    <a href="<%= base_url + '/register' %>"> Register </a>
            </div>
        </div>
        <%- include("../section/v1/script"); -%>
        <script src="/v1/js/login.js"></script>
        <%- include("../modal/default"); -%>
    </body>
</html>