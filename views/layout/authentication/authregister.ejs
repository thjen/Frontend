<html>
    <head>
        <%- include("../section/v1/head"); -%>
    </head>
    <body>
        <script type="text/javascript" src="v1/js/register.js"></script>
        <div class="row" style="margin-top: 100px; margin-left: 20px; margin-bottom: 100px;">
            <div class="col-sm-4 col-md-4 col-lg-4 col-md-offset-4 col-xs-12">
                <h2 class="text-center">Welcome</h2>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input id="email" name="regisEmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input id="password" name="regisPass" type="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password confirm</label>
                        <input id="confirm_password" name="regisPassConfirm" type="password" class="form-control" placeholder="Password confirm">
                    </div>
                    <button type="register" class="btn btn-primary" onclick="register();">Register</button>
                    <br/><br/>
                    <a href="<%= base_url %>"> Login </a>
            </div>
        </div>
        <%- include("../section/v1/script"); -%>
        <%- include("../modal/default"); -%>
    </body>
</html>