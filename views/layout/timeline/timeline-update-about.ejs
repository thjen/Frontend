<html lang="vi">
    <head>
        <%- include('../section/v1/head'); -%>
    </head>
    <body>
        <%- include('../section/v1/header'); -%>

<div class="container">

      <!-- Timeline
      ================================================= -->
      <div class="timeline">
        <div class="timeline-cover">

          <!--Timeline Menu for Large Screens-->
          <div class="timeline-nav-bar hidden-sm hidden-xs">
            <div class="row">
              <div class="col-md-3">
                <div class="profile-info">
                  <img src="/images/users/user-1.jpg" alt="" class="img-responsive profile-photo" />
                  <h3>Sarah Cruiz</h3>
                  <p class="text-muted">Creative Director</p>
                </div>
              </div>
              <div class="col-md-9">
                <ul class="list-inline profile-menu">
                  <li><a href="/timeline">Timeline</a></li>
                  <li><a href="/timeline/about" class="active">About</a></li>
                  <li><a href="/timeline/image">Album</a></li>
                  <li><a href="/timeline/friends">Friends</a></li>
                </ul>
                <ul class="follow-me list-inline">
                  <li>1,299 people following her</li>
                  <li><button class="btn-primary">Add Friend</button></li>
                </ul>
              </div>
            </div>
          </div><!--Timeline Menu for Large Screens End-->

          <!--Timeline Menu for Small Screens-->
          <div class="navbar-mobile hidden-lg hidden-md">
            <div class="profile-info">
              <img src="/images/users/user-1.jpg" alt="" class="img-responsive profile-photo" />
              <h4>Sarah Cruiz</h4>
              <p class="text-muted">Creative Director</p>
            </div>
            <div class="mobile-menu">
              <ul class="list-inline">
                <li><a href="/timeline">Timeline</a></li>
                  <li><a href="/timeline/about" class="active">About</a></li>
                  <li><a href="/timeline/image">Album</a></li>
                  <li><a href="/timeline/friends">Friends</a></li>
              </ul>
              <button class="btn-primary">Add Friend</button>
            </div>
          </div><!--Timeline Menu for Small Screens End-->

        </div>
        <div id="page-contents">
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-7">

              <!-- About
              ================================================= -->
              <div class="form-room-live-default form-update-about text-center container-fluid-full">
                  <h4 class="text-left">Introduction</h4>
                  <textarea class="form-control" rows="5" id="introduction" placeholder="Your introduction"></textarea>
                  <br/>
                  <button class="roomlive-button btn-primary" onclick="update_intrpducton();">
                      Save
                  </button>
              </div>
              <div class="form-room-live-default form-update-about text-center container-fluid-full">
                <h4 class="text-left">Address</h4>
                <textarea class="form-control" rows="5" id="address" placeholder="Your address"></textarea>
                <br/>
                <button class="roomlive-button btn-primary" onclick="update_address();">
                    Save
                </button>
            </div>
            </div>
            <div class="col-md-2">
              <img id="banner-120-600" src="http://creatmark.vn/demo/size/120x600.jpg">
            </div>
          </div>
        </div>
      </div>
    </div>

        <%- include('../section/v1/footer'); -%>
<%- include("../section/v1/script"); -%>
<script src="/v1/js/verify_login.js"></script>
<script src="/v1/js/setup_menu.js"></script>
<script src="/v1/js/user_info.js"></script>
<script src="/v1/js/user_update.js"></script>
    </body>
</html>